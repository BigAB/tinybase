{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "removeComments": true,
    "target": "ES2020",
    "module": "ES2020",
    "jsx": "react",
    "typeRoots": ["../node_modules/@types"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": [
      "asciichart",
      "jest",
      "node",
      "jest-environment-puppeteer",
      "http-server"
    ],
    "skipLibCheck": true
  }
}
